{
    "coc.preferences.formatOnSaveFiletypes": [
        "css",
        "markdown",
        "javascript",
        "graphql",
        "html",
        "yaml",
        "json",
        "python",
        "xml"
    ],
    "snippets.ultisnips.directories": [
        "UltiSnips",
        "~/.config/nvim/utils/snips"
    ],
    "python.analysis.logLevel": "Warning",
    "python.pythonPath": "python3",
    "python.venvPath": "~/.conda/env/",
    "python.formatting.provider": "autopep8",
    "pyright.disableDiagnostics": true,
    "diagnostic-languageserver.filetypes": {
        "python": [
            "flake8"
            /* "mypy" */
        ],
        "javascript": "eslint"
    },
    "diagnostic-languageserver.formatFiletypes": {
        "python": [
            "autopep8",
            "pyright"
        ],
        "javascript": "prettier"
    },
    "prettier.tabWidth": 4,
    "prettier.trailingComma":"all",
    "emmet.showAbbreviationSuggestions": true,
    "emmet.includeLanguages":{
        "javascript":"javascriptreact"
    },
    "explorer.width": 35,
    "explorer.buffer.root.template": "[icon & 1] BUFFERS",
    "explorer.file.root.template": "[icon & 1] TREE ([root])",
    "explorer.file.child.template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5]",
    "explorer.file.showHiddenFiles": true,
    "explorer.file.autoReveal": true,
    "explorer.icon.enableVimDevicons": true,
    "explorer.icon.enableNerdfont": true,
    "explorer.previewAction.onHover": false,
    "explorer.git.showIgnored": true,
    "explorer.keyMappings.global": {
        "v": "open:vsplit:intelligent",
        "s": "open:split:intelligent",
        "e": ""
    },
    "xml.format.spaceBeforeEmptyCloseTag": false,
    "xml.format.enabled": false
}
